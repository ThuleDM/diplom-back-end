 <div class="auth">
  <div class="row">
    <div class="col s6 offset-s3">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log in</a></li>
        <li class="tab col s6"><a href="#register">Sign in</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        {{#if loginError}}
            <p class="alert">{{loginError}}</p>
        {{/if}}
        <h1>Log in</h1>
        <form action="/auth/login" method="POST">
            <div class="input-field">
                <i class="material-icons prefix">email</i>
                <input id="email" name = "email" type="email"  >
                <label for="email">Email</label>
                <span class="helper-text" data-error="Enter email"></span>
            </div>

            <div class="input-field">
                <i class="material-icons prefix">mode_edit</i>
                <input id="password" name = "password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Enter password"></span>
            </div>

            <button class="btn btn-primary" type="submit">Log in</button>
        </form> 
    </div>
    <div id="register" class="col s6 offset-s3">
        
        {{#if registerError}}
            <p class="alert">{{registerError}}</p>
        {{/if}}
        
        <h1 class="center-align">Sign in</h1>
        <div class="row">
        <form action="/auth/register" method="POST">
            <div class="input-field col s6">
                <i class="material-icons prefix">email</i>
                <input id="remail" name = "email" type="email" class="validate" required>
                <label for="remail">Email</label>
                <span class="helper-text" data-error="Enter email"></span>
            </div>

            <div class="input-field col s6">
                <i class="material-icons prefix">phone</i>
                <input id="phone" name="phone" type="tel"  class="validate" required>
                <label for="phone">Telephone</label>
                <span class="helper-text" data-error="Enter phone number"></span>
            </div>

            <div class="input-field col s6">
                <i class="material-icons prefix">mode_edit</i>
                <input id="rpassword" name = "password" type="password" class="validate" required min="6">
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="Enter password"></span>
            </div>
            

            <div class="input-field col s6">
                <i class="material-icons prefix">mode_edit</i>
                <input id="repeatPassword" name = "repeatPassword" type="password" class="validate" required>
                <label for="repeatPassword">Repeat password </label>
                <span class="helper-text" data-error="Enter password"></span>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input id="name" name = "name" type="text" class="validate" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Enter name"></span>
            </div>
            <div class="col s6 offset-s5">
                <button class="btn btn-primary" type="submit">Sign in</button>
            </div>
        </form> 
        </div>
    </div>
  </div>
</div>

