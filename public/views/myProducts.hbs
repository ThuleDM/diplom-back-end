<div class="row">
  <h1>My products</h1>

    <div class="col s10">
      <div class="main-card">
      {{#if myProducts.length}}
      {{#each myProducts}}
      {{!-- <div class="flex-content"> --}}
        {{!-- <div class="row"> --}}
            <div class="col s3" data-price = "{{price}}">
              <div class="card card-panel hoverable" >
                <div class="card-image" >
                  <img src="/media/{{img.0.filename}}" alt = "{{title}}">
                </div>
                <div class="card-content">
                  <span class="card-title truncate">{{title}}</span>
                  <span class="category truncate">{{category}}</span>
                  <p class="price truncate">{{price}}</p>
                </div>
                <div class="card-action actions">
                  <a href="/myProducts/{{id}}" target="_blank">Open</a>
                    {{#if @root.isAuth}}
                      <a href="/myProducts/{{id}}/edit?allow=true">Edit</a>
                    {{/if}}       
                </div>
              </div>
            </div>
        {{!-- </div> --}}
      {{!-- </div> --}}
      {{/each}}
      {{else}}
            <p>Dont have any products yet</p>
      {{/if}}
      </div>
    </div>
</div>
