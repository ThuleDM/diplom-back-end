<div class="container">
<h1>Edit {{product.title}}</h1>

<form action="/products/edit" method="POST" class="product-form">
    <div class="input-field">
        <input id="title" name = "title" type="text" class="validate" required value="{{product.title}}">
        <label for="title">Product name</label>
        <span class="helper-text" data-error="Input name"></span>
    </div>

    <div class="input-field">
        <input id="price" name = "price" type="number" class="validate" required min="10" value="{{product.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="row">
        <div class="product img col s6">
            {{#each product.img}}
                <a><img src="/media/{{filename}}"></a>
            {{/each}}
        </div>
    </div>

    <input type="hidden" name="id" value="{{product.id}}">

    <button type = "submit" class="btn btn-primary">Edit product</button>
</form> 

<form action="/products/remove" method="POST">
    <input type="hidden" name="id" value="{{product.id}}">
    <button class = "btn red"> Delete product</button>
</form>
</div>