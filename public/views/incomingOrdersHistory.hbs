<div class="container">
<h1>Incoming orders history</h1>

  
{{#if incOrdersToHistory.length}}
    {{#each incOrdersToHistory}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            order <small>{{_id}}</small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.userId.name}}</em>({{user.userId.email}})</p>
                        <ol>
                            {{#each products}}
                                <li >
                                    {{product.title}} (x<strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <div class = "product-info">
                            <p>Price: <span class="price">{{price}}</span></p>
                            <p>Status: <span>{{status}}</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>You do not have any orders</p>
{{/if}}
</div>